{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Employer",
  "type": "object",
  "properties": {
    "payeReference": {
      "type": "string",
      "description": "The employer's paye reference"
    },
    "name": {
      "type": "string",
      "description": "The employer's name"
    },
    "address": {
      "type": "object",
      "description": "The employer's address",
      "properties": {
        "line1": {"type": "string"},
        "line2": {"type": "string"},
        "postcode": {"type": "string"}
      },
      "required": [
        "line1",
        "postcode"
      ]
    }
  },
  "required": ["payeReference"]
}
