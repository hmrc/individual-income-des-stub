{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "employment",
  "type": "object",
  "properties": {
    "startDate": {
      "type": "string",
      "format": "date",
      "description": "The start date for the employment",
      "example": "2016-01-01"
    },
    "endDate": {
      "type": "string",
      "format": "date",
      "description": "The end date for the employment",
      "example": "2017-03-01"
    },
    "payFrequency": {
      "type": "string",
      "description": "A value representing the frequency of payment for an employment",
      "enum": [
        "WEEKLY",
        "FORTNIGHTLY",
        "FOUR_WEEKLY",
        "CALENDAR_MONTHLY",
        "QUARTERLY",
        "BI_ANNUALLY",
        "ANNUALLY",
        "ONE_OFF",
        "IRREGULAR"
      ]
    },
    "payments": {
      "description": "The payments associated with the employment",
      "type": "array",
      "items": {
          "additionalProperties": false,
          "id": "/properties/payments/items",
          "properties": {
            "paymentDate": {
              "id": "/properties/payments/items/properties/paymentDate",
              "type": "string",
              "format": "date",
              "description": "The payment date",
              "example": "2016-01-28"
            },
            "taxablePayment": {
              "id": "/properties/payments/items/properties/taxablePayment",
              "type": "number",
              "description": "The total amount for which tax was paid",
              "example": "1000.55"
            },
            "nonTaxablePayment": {
              "id": "/properties/payments/items/properties/nonTaxablePayment",
              "type": "number",
              "description": "The total amount exempt from taxes",
              "example": "0"
            },
            "weekPayNumber": {
              "type": "number",
              "description": "A number corresponding to the week the payment was made",
              "example": "45"
            },
            "monthPayNumber": {
              "type": "number",
              "description": "A number between 1 and 12, corresponding to the month the payment was made",
              "example": "10"
            }
          },
          "required": ["paymentDate", "taxablePayment", "nonTaxablePayment"],
          "type": "object"
      }
    }
  },
  "required": ["payments"]
}
